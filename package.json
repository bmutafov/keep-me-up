{
  "name": "simple-keep-pc-awake",
  "version": "1.2.0",
  "description": "A simple way to keep your PC awake with no configuration and setup.",
  "main": "index.js",
  "homepage": "https://github.com/mutafow/simple-keep-pc-awake#readme",
  "scripts": {
    "start": "node index.js",
    "publish-npm": "npm publish --access public",
    "build": "pkg ."
  },
  "bin": "index.js",
  "keywords": [
    "awake",
    "keep pc awake",
    "mouse mover",
    "lightweight",
    "simple awake"
  ],
  "author": "Boris Mutafov",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/mutafow/simple-keep-pc-awake"
  },
  "dependencies": {
    "@nut-tree/nut-js": "^2.0.1",
    "chalk": "^4.1.0",
    "desktop-idle": "^1.3.0",
    "figlet": "^1.5.2",
    "gradient-string": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.16"
  },
  "pkg": {
    "scripts": "index.js",
    "assets": [
      "package.json",
      "node_modules/gradient-string",
      "node_modules/figlet",
      "node_modules/desktop-idle",
      "node_modules/chalk",
      "node_modules/@nut-tree"
    ],
    "targets": [
      "node16-macos",
      "node16-linux",
      "node16-win"
    ],
    "outputPath": "build",
    "compress": "GZip"
  }
}
